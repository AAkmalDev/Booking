<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.screens.PhoneNumberFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        app:title="Verification Code"
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/ic_baseline_arrow_back"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tx_number"
        android:gravity="center"
        android:text="We have sent verification code \nto:*998 ** *** "
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Please enter verification code!"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_verification_number"
            android:layout_width="match_parent"
            android:inputType="number"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_baseline_lock"
            android:imeOptions="actionDone"
            android:layout_height="match_parent"
            android:hint="Verification Code" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/sent_again"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?selectableItemBackground"
        android:text="Sent again"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_bgn"
        android:text="Send"
        android:layout_marginBottom="32dp"
        android:textAllCaps="false" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>